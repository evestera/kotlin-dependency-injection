root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
indent_style = space

# For ktlint. ktlint requires exactly this header, and only considers rules under the header
[*.{kt,kts}]
indent_size = 4
ktlint_disabled_rules = no-wildcard-imports,filename,trailing-comma
max_line_length = 120
